{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noResolve": false,
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "core-js",
      "node",
      "jasmine"
    ],
    "baseUrl": ".",
    "paths": {
      "@blackbaud/skyux-builder/*": [
        "./node_modules/@blackbaud/skyux-builder/*",
        "./*"
      ],
      ".skypageslocales/*": [
        ".skypageslocales/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.aot.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
